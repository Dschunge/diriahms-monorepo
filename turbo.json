{
  "$schema": "https://turborepo.org/schema.json",
  "globalEnv": [
    "DISABLE_EXTRACTION",
    "NODE_ENV",
    "EAS_BUILD_PLATFORM",
    "DATABASE_URL",
    "HOST",
    "PORT"
  ],

  "tasks": {
    "build": {
      "inputs": ["$TURBO_DEFAULT", ".env*"],
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "build/**", "node_modules/.cache/metro/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": ["DISABLE_EXTRACTION", "NODE_ENV", "EAS_BUILD_PLATFORM", "DATABASE_URL"]
    },
    "start:api": {
      "cache": false,
      "inputs": ["$TURBO_DEFAULT", ".env*"]
    },
    "generate": {
      "cache": false
    },
    "db:push": {
      "cache": false
    }
  },
  "globalPassThroughEnv": ["DATABASE_URL", "HOST", "NODE_ENV", "PORT"]
}
